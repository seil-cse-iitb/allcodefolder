<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />

            <stroke android:width="1dp" android:color="#504a4b" />

            <corners android:radius="5dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="1dp" android:top="1dp" />
        </shape></item>
        <item ><bitmap android:gravity="bottom|right" android:src="@drawable/downw_arrow" />   // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list></item>

</selector>