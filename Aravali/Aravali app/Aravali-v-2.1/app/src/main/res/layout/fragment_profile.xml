<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view1"
                android:elevation="5dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/edit"
                        android:id="@+id/ivEdit"
                        android:tint="@color/profile_tick"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Siddharth Singh"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="35sp"
                        android:ellipsize="end"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/tProfileName"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23 years old"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:layout_below="@+id/tProfileName"
                        android:id="@+id/tProfileAge"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="60Kg"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tProfileAge"
                        android:id="@+id/tProfileWeight"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="178cm"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:minLines="1"
                        android:maxLines="2"
                        android:layout_below="@+id/tProfileWeight"
                        android:id="@+id/tProfileHeight"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Room 2"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tProfileHeight"
                        android:id="@+id/tProfileRoom"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/profile_placeholder"
                android:elevation="10dp"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:id="@+id/iProdfilePhoto"/>


        </FrameLayout>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/frameLayout"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:elevation="5dp"
    android:visibility="gone"
    android:id="@+id/card_view2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_placeholder"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tEditProdilePhoto"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tick"
            android:tint="@color/profile_tick"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/ivDone"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilFName"
            android:layout_below="@+id/tEditProdilePhoto"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/eEditProfileFName"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:layout_gravity="center"
                android:textColor="#000"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="17sp"
                android:inputType="textPersonName"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilLName"
            android:layout_below="@+id/tilFName"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/eEditProfileLName"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Age"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="17sp"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilEmail"
            android:layout_below="@+id/tilLName"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/eEditEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Weight in Kg"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp"
                android:inputType="number"
                android:minLines="1"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilAddress"
            android:layout_below="@+id/tilEmail"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/eEditProfileAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Height"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilAddress"
            android:id="@+id/tilPincode"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/eEditProfilePincode"
                android:hint="Room Number"
                android:inputType="number"
                android:maxLength="6"
                android:textCursorDrawable="@null"
                />
        </android.support.design.widget.TextInputLayout>




    </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>

</ScrollView>