<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="60dp"
    tools:context="com.example.sid.homeautomation.Feedback">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="How is the Temperature of your room?" />

    <Spinner
        android:id="@+id/temperature_spinner"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:elevation="2dp"

        android:layout_marginTop="15dp"
        android:entries="@array/ASHRAE_arrays"
        android:paddingBottom="5dp"
        style="@style/spinner_style"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="How is the Airiness of your room?" />

    <Spinner
        android:id="@+id/start_minute_spinner"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:elevation="2dp"

        android:layout_marginTop="15dp"
        android:entries="@array/ASHRAE_arrays"
        android:paddingBottom="5dp"
        style="@style/spinner_style"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_feedback_button"
        android:text="Submit"
        android:padding="8dp"
        android:textSize="18sp"
        android:background="#62ff57"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
