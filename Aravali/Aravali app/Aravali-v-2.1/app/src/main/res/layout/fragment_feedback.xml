<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout

        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:textColor="#999"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="Is there anything else you would like to see in the app about your electricity usage?" />
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/feedback"/>


        <EditText
            android:id="@+id/feedback_edittext"
            android:hint="Type in your feedback"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:elevation="2dp"

            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:maxLength="500"
            android:gravity="top"

            />
        <TextView
            android:id="@+id/char_remaining_TV"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:textSize="8sp"
            android:text="500 characters remaining"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#888"/>

        <Button
            android:id="@+id/submit_button"
            android:elevation="2dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textColor="#000"
            android:background="#a2d69f"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="145dp"
            />
    </LinearLayout>
</ScrollView>